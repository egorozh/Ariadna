<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fluent="urn:fluent-ribbon"
                    xmlns:ariadna="clr-namespace:Ariadna">

    <Style TargetType="{x:Type ariadna:RibbonTabItem}" BasedOn="{StaticResource {x:Type fluent:RibbonTabItem}}">
        <Setter Property="fluent:RibbonProperties.MouseOverBackground"
                Value="{DynamicResource MahApps.Brushes.Flyout.Background}" />
        <Setter Property="fluent:RibbonProperties.IsSelectedBackground"
                Value="{DynamicResource MahApps.Brushes.Flyout.Background}" />
    </Style>

    <Style TargetType="{x:Type fluent:RibbonTabControl}" BasedOn="{StaticResource {x:Type fluent:RibbonTabControl}}">
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray8}" />
        <Setter Property="fluent:RibbonProperties.IsSelectedBackground"
                Value="{DynamicResource MahApps.Brushes.Flyout.Background}" />
    </Style>
 
</ResourceDictionary>