<Application x:Class="TabbedNotepad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ariadna="clr-namespace:Ariadna;assembly=Ariadna.WPF">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Ariadna.WPF;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="AkimDocumentHeaderTemplate">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Title}"/>

                    <TextBlock Text="*"
                               Visibility="{Binding Content.Project.AkimDocument.HaveChanges, Converter={ariadna:BoolToVisibilityConverter}}"
                               VerticalAlignment="Center"
                               Margin="2 0 0 0"
                               TextAlignment="Center" />
                </StackPanel>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>

</Application>